<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="画廊" />
            <Button
                android:id="@+id/btn_glide_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glide" />
            <Button
                android:id="@+id/btn_HorizontalRVActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HorizontalRVActivity" />
            <Button
                android:id="@+id/btn_ScrollingActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ScrollingActivity" />
            <Button
                android:id="@+id/btn_InstenceActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InstenceActivity" />
            <Button
                android:id="@+id/btn_RecyclerViewActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RecyclerViewActivity" />
            <Button
                android:id="@+id/btn_FacebookLinkActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FacebookLinkActivity" />
            <Button
                android:id="@+id/btn_X5webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X5webview" />
            <Button
                android:id="@+id/btn_videoPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="videoplay" />
            <Button
                android:id="@+id/test_jiaozi"
                android:layout_width="match_parent"
                android:text="饺子视频播放器测试"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>